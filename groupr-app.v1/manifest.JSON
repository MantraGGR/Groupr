{
  "manifest_version": 3,
  "name": "Groupr - AI Tab Organizer",
  "version": "1.0.1",
  "description": "Organize your browser tabs intelligently using AI-powered grouping with Gemini",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "762767764327-gs7ccml7sd97m4f2ke196rohh1oksanh.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/generative-language.retriever"
    ]
  }
}